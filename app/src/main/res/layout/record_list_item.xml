<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/recordListItemDateTextView"
            android:layout_width="0.25sp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/textToday" />
        <TextView
            android:id="@+id/recordListItemTimeTextView"
            android:layout_width="0.25sp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/textToday" />
        <TextView
            android:id="@+id/recordListItemStepsTextView"
            android:layout_width="0.25sp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/textToday" />
        <TextView
            android:id="@+id/recordListItemKmTextView"
            android:layout_width="0.25sp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:textSize="20sp"
            android:textColor="@color/textToday" />
    </LinearLayout>

</LinearLayout>